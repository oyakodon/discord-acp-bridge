# Discord Bot設定
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_GUILD_ID=123456789012345678
DISCORD_ALLOWED_USER_ID=123456789012345678

# ACP Server設定（オプション）
# JSON配列形式で指定してください
# AGENT_COMMAND=["claude-code-acp"]
# 引数を含む場合の例: AGENT_COMMAND=["claude-code-acp", "--verbose"]

# Trusted Paths（必須）
# プロジェクトとして許可するディレクトリのルートパスをJSON配列形式で指定
# 各Trusted Path直下のディレクトリが自動的にプロジェクトとして認識されます
TRUSTED_PATHS=["/home/user/projects"]
# 複数のパスを指定する場合: TRUSTED_PATHS=["/home/user/projects", "/home/user/workspaces"]

# ロギング設定（オプション）
# ログレベル: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO
# ログ出力ディレクトリ（デフォルト: logs）
# LOG_DIR=logs
# ログローテーションの保持日数（デフォルト: 7）
# LOG_BACKUP_COUNT=7
