{
  "permissions": {
    "allow": [
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff check:*)",
      "Bash(uv run mypy:*)",
      "Bash(ruff check:*)",
      "Bash(uv run ruff format:*)",
      "Bash(pytest:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "WebFetch(domain:agentclientprotocol.com)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:agentclientprotocol.github.io)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '\\.py$'; then uvx ruff format \"$file_path\" && uvx ruff check --fix --extend-select I \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  }
}
